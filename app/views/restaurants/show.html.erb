<div class="container">
  <div class="info-restaurant mt-5">
    <h2><%= @restaurant.name %></h2>
    <p>
      <i class="fas fa-map-pin"></i>
      <%= @restaurant.address %>
    </p>
    <p>
      <i class="fas fa-phone"></i>
      <%= @restaurant.phone_number %>
    </p>
    <p>
      <i class="fas fa-utensils"></i>
      <%= @restaurant.category %>
    </p>
  </div>
  <div class="avis">
    <p><strong>Vos avis</strong></p>
    <ul class="p-0">
      <% @restaurant.reviews.each do |review| %>
        <li><%= review.rating %> / 5</li>
        <li>" <%= review.content %> "</li>
      <% end %>
    </ul>
      <div class="bouton-avis">
     <%= link_to 'Donner mon avis', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
  </div>
  </div>
  <div class="bouton-accueil">
     <%= link_to 'Accueil', restaurants_path, class: "btn btn-primary" %>
  </div>
</div>
