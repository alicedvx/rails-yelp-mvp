<div class="container">
  <h1>Tell us about your experience at " <%= @restaurant.name %> "</h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: Review::RATINGS %>
    <%= f.button :button, type: :submit, class: "btn-primary" %>
  <% end %>
</div>
